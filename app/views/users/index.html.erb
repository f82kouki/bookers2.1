<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <p id="notice"></p>
      <h2>Users</h2>
      <div class="table-responsive">
     <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
           <td>
            <% if user.profile_image.attached? %>
              <%= image_tag user.get_profile_image(50,50) %>
            <% else %>
              <%= image_tag 'no-image', size: "50x50" %>
            <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
     </table>
    </div>
  </div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

