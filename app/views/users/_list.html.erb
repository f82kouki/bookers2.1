<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<p id="notice"></p>
<h2>User info</h2>
    <% if @user.profile_image.attached? %>
      <%= image_tag @user.get_profile_image(100,100) %>
    <% else %>
      <%= image_tag 'no-image', size: "100x100" %>
    <% end %>
    <table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
    </tbody>
  </table>
    <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>

    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, url: books_path, method: :post, local: true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control book_title w-100" %>
      </div>
      <div class="form-group">
        <label for="book_body">Body</label>
        <%= f.text_area :body, class: "form-control book_body w-100" %>
      </div>
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    <% end %>